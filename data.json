    {
      "id": "activity_clickbait_filter_quiz",
      "type": "activity",
      "label": "Clickbait Filter Quiz",
      "expertise": "B2",
      "activityType": "question",
      "difficulty": "medium",
      "estimatedDuration": 600,
      "subtypeDetails": { 
        "questionFormat": "multipleChoice"
      },
      "content": {
        "prompt": "Vyber 3 z následujících 5 nadpisů, které jsou clickbait. Zdůvodni svou volbu.",
        "options": [
          {
            "id": "opt-1",
            "text": "Lékaři varují: Tento běžný nápoj ničí vaše játra!",
            "isClickbait": true,
            "indicators": ["emocionální jazyk", "vágní informace", "vyvolává strach"]
          },
          {
            "id": "opt-2",
            "text": "Studie z roku 2024 zjistila spojitost mezi konzumací cukru a diabetem 2. typu",
            "isClickbait": false,
            "indicators": ["konkrétní informace", "uvedený zdroj", "neutrální jazyk"]
          },
          {
            "id": "opt-3",
            "text": "Neuvěříte, jak tato žena zhubnula 20 kilo! Foto č. 5 je šokující",
            "isClickbait": true,
            "indicators": ["vyvolává zvědavost", "číslovka", "emocionální jazyk"]
          },
          {
            "id": "opt-4",
            "text": "Vláda schválila novelu zákona o mediální odpovědnosti",
            "isClickbait": false,
            "indicators": ["faktické sdělení", "konkrétní informace", "neutrální tón"]
          },
          {
            "id": "opt-5",
            "text": "To, co tento učitel řekl studentům, změnilo jejich životy NAVŽDY",
            "isClickbait": true,
            "indicators": ["tajemství", "velká písmena", "emocionální náboj"]
          }
        ],
        "rubric": "3 správné identifikace = 2 body | 2 správné = 1 bod | Zdůvodnění každého výběru +0.5 bodu (max +1.5)",
        "correctAnswers": ["opt-1", "opt-3", "opt-5"]
      },
      "metadata": {
        "author": "Mgr. Novák",
        "created": "2025-11-15"
      }
    },
    {
      "id": "activity_emotion_experiment",
      "type": "activity",
      "label": "Experiment: Emoce v titulcích",
      "expertise": "B2",
      "activityType": "project",
      "difficulty": "hard",
      "estimatedDuration": 3600,
      "subtypeDetails": {
        "projectType": "experiment"
      },
      "content": {
        "instructions": "Vytvořte 2 verze titulku pro stejný článek - jednu neutrální a jednu s emocionálním jazykem. Sdílejte je s 20 spolužáky a změřte, kolik lidí si přečte celý článek u každé verze.",
        "deliverables": [
          "2 verze titulku s analýzou použitých technik",
          "Tabulka s výsledky experimentu (min. 20 respondentů)",
          "Písemné shrnutí (300-500 slov) vysvětlující rozdíly v zapojení a jejich příčiny"
        ],
        "assessmentCriteria": [
          "Kvalita experimentálního designu (jasná hypotéza, kontrola proměnných)",
          "Sběr a prezentace dat",
          "Hloubka analýzy výsledků"
        ]
      },
      "metadata": {
        "groupWork": true,
        "maxGroupSize": 3
      }
    },
    {
      "id": "activity_source_credibility_checklist",
      "type": "activity",
      "label": "Checklist věrohodnosti",
      "expertise": "B1",
      "activityType": "exercise",
      "difficulty": "easy",
      "estimatedDuration": 900,
      "subtypeDetails": {
        "exerciseType": "evaluation"
      },
      "content": {
        "instructions": "Použijte checklist k vyhodnocení 3 různých online článků. Rozhodněte, kterému zdroji nejvíce důvěřujete a proč.",
        "checklist": [
          "Je uveden autor a jeho kvalifikace?",
          "Jsou citovány primární zdroje?",
          "Je datum publikace aktuální?",
          "Obsahuje článek reklamy nebo sponzorovaný obsah?",
          "Používá článek emocionální nebo neutrální jazyk?",
          "Je možné ověřit tvrzení v nezávislých zdrojích?"
        ],
        "articles": [
          "https://example-news-1.cz/clanek",
          "https://example-news-2.cz/clanek",
          "https://example-blog.cz/post"
        ]
      }
    },
