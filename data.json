    {
      "id": "term_clickbait",
      "type": "term",
      "label": "Clickbait",
      "definition": "Titulek nebo obsah navržený primárně pro maximalizaci prokliků, často pomocí přehnaných emocí, tajemství nebo zavádějících informací. Typicky slibuje více, než obsah skutečně poskytuje.",
      "synonyms": ["návnadový titulek", "clickbaitový nadpis"],
      "category": "conceptual",
      "language": "cs",
      "metadata": {
        "examples": [
          "Neuvěříte, co se stalo dál!",
          "Lékaři v šoku! Tento trik...",
          "Číslo 7 vás překvapí"
        ],
        "frequency": "common"
      }
    },
    {
      "id": "term_emotion_language",
      "type": "term",
      "label": "Emocionální jazyk",
      "definition": "Využití slov a frází, které vyvolávají silné emocionální reakce (strach, vztek, radost, překvapení) za účelem zvýšení zapojení publika nebo ovlivnění jejich rozhodování.",
      "synonyms": ["emotivní jazyk", "afektivní komunikace"],
      "category": "conceptual",
      "language": "cs",
      "metadata": {
        "examples": [
          "šokující", "neuvěřitelné", "skandální", "zázračný"
        ],
        "relatedConcepts": ["pathos", "persuaze"],
        "frequency": "frequent"
      }
    },
    {
      "id": "term_engagement_metrics",
      "type": "term",
      "label": "Metriky zapojení",
      "definition": "Měřitelné ukazatele interakce uživatelů s obsahem, včetně prokliků (CTR), času stráveného na stránce, sdílení a komentářů.",
      "synonyms": ["engagement metriky", "míra zapojení"],
      "category": "procedural",
      "language": "cs",
      "metadata": {
        "examples": ["CTR (Click-Through Rate)", "čas na stránce", "bounce rate"],
        "frequency": "common"
      }
    },
